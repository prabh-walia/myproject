            <div class="Item_price px-5 mt-3" style="display: flex;">
                <div class="item-price-head ">
                    Item price  :
                </div>
                <div class="actualprice">
                  <%=data.price%>
                </div>
                

            </div>
            <div class="shipping px-5 mt-1" style="display: flex;">
            <div class="shipping-head">
                Shipping  :
            </div>
            <div class="shipping-price">
